{
  "scopeName": "source.yesod.lucius",
  "fileTypes": [ "lucius" ],
  "name": "Yesod Lucius",
  "patterns": [
      { "include": "#interpolation" },
      { "include": "source.css" }
  ],
  "repository": {
    "interpolation": {
      "patterns": [
        {
          "match": "([#@]){(.+)}",
          "captures": {
            "1": {
              "name": "entity.other.attribute-name.yesod"
            },
            "2": {
              "name": "constant.other.yesod"
            }
          },
          "name": "interpolation.yesod"
        }
      ]
    }
  }
}