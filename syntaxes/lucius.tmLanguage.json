{
  "scopeName": "source.yesod.lucius",
  "fileTypes": [ "lucius" ],
  "name": "Yesod Lucius",
  "patterns": [
      { "include": "#interpolation" },
      { "include": "source.css" }
  ],
  "repository": {
    "interpolation": {
      "patterns": [
        {
          "begin": "([#@])\\{",
          "beginCaptures": {
            "0": {
              "name": "punctuation.section.interpolation.begin.lucius"
            }
          },
          "contentName": "source.haskell.embedded",
          "end": "(\\})",
          "endCaptures": {
            "0": {
              "name": "punctuation.section.interpolation.end.lucius"
            }
          },
          "name": "meta.interpolation.lucius",
          "patterns": [
            {
              "include": "source.haskell"
            }
          ]
        }
      ]
    }
  }
}