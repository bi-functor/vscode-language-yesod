{
    "scopeName": "source.yesod.hamlet",
    "fileTypes": [
        "hamlet"
    ],
    "name": "Yesod Hamlet",
    "patterns": [
        {
            "include": "text.html.basic"
        },
        {
            "include": "#interpolation"
        },
        {
            "include": "#keyword"
        },
        {
            "include": "#comment"
        }
    ],
    "repository": {
        "interpolation": {
            "patterns": [
                {
                    "begin": "([_@#^]){",
                    "beginCaptures": {
                        "1": {
                            "name": "entity.other.attribute-name"
                        }
                    },
                    "end": "}",
                    "name": "interpolation.yesod",
                    "patterns": [
                        {
                            "include": "source.haskell"
                        }
                    ]
                }
            ]
        },
        "keyword": {
            "patterns": [
                {
                    "match": "(\\$)(if|elseif|else|maybe|nothing|forall|case|of|with|doctype)(\\s+)",
                    "name": "keyword.yesod.hamlet"
                }
            ]
        },
        "comment": {
            "patterns": [
                {
                    "match": "^\\s*\\$#.*$",
                    "name": "comment.yesod.hamlet"
                }
            ]
        }
    }
}