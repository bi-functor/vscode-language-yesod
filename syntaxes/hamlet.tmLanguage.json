{
  "scopeName": "source.yesod.hamlet",
  "fileTypes": ["hamlet"],
  "name": "Yesod Hamlet",
  "patterns": [
    { "include": "#interpolation" },
    { "include": "#keyword" },
    { "include": "#comment" },
    { "include": "#tag" }
  ],
  "repository": {
    "interpolation": {
      "patterns": [
        {
          "begin": "([_@#^\\*]|@\\?)\\{",
          "beginCaptures": {
            "0": {
              "name": "punctuation.section.embedded.begin.hamlet"
            }
          },
          "contentName": "source.haskell",
          "end": "(\\})",
          "endCaptures": {
            "0": {
              "name": "punctuation.section.embedded.end.hamlet"
            }
          },
          "name": "meta.embedded.line.hamlet",
          "patterns": [
            {
              "include": "source.haskell"
            }
          ]
        }
      ]
    },
    "keyword": {
      "patterns": [
        {
          "match": "\\$(else|nothing|doctype|newline)\\s+",
          "name": "keyword.control.hamlet"
        },
        {
          "begin": "\\$(if|elseif|maybe|forall|case|of|with)\\s+",
          "beginCaptures": {
            "0": { "name": "keyword.control.hamlet" }
          },
          "end": "\\n",
          "name": "meta.embedded.line.hamlet",
          "patterns": [
            {
              "include": "source.haskell"
            }
          ]
        },
        {
          "match": "#$|^\\s*\\\\",
          "name": "keyword.operator.hamlet"
        }
      ]
    },
    "comment": {
      "patterns": [
        {
          "match": "^\\s*\\$#.*$",
          "name": "comment.line.$#.hamlet"
        }
      ]
    },
    "tag": {
      "patterns": [
        {
          "begin": "<[a-z]+",
          "end": ">",
          "name": "meta.embedded.line.hamlet",
          "patterns": [
            { "include": "#attribute" },
            { "include": "#interpolation" },
            {
              "match": "\\s(#|\\.)([^\\s>]+)",
              "captures": {
                "1": { "name": "entity.other.attribute-name.hamlet" },
                "2": {
                  "patterns": [
                    { "include": "#interpolation" },
                    {
                      "match": "\\w",
                      "name": "entity.other.attribute-name.hamlet"
                    }
                  ]
                }
              }
            }
          ]
        }
      ],
      "repository": {
        "attribute": {
          "patterns": [
            {
              "match": ":[^:]+:[^>]+",
              "name": "entity.other.attribute-name.hamlet"
            }
          ]
        }
      }
    }
  }
}
